{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
		"lib": [
			"es6",
			"dom"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"rootDir": "src",
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"baseUrl": "./",
		"paths": {
			"@src/*": [
				"src/*"
			],
			"@canvas/*": [
				"src/canvas/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"build"
	]
}
